
<ul class = "courses">
  <%= form_tag :controller=>"courses",:action=>"register"  %>
		<% @courses.each do |course| %>
			<%= check_box_tag 'courses_id[]', course.id, false, {} %>
			<%= label_tag :course_id, course.name+' | '+course.teacher + ' | ' +course.day, :value => course.id %>
		<br>
		<% end %>
		<%= submit_tag "授業登録" %> 
</ul>
